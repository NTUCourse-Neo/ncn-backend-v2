/// 領域專長說明主表
model Domain {
  /// 領域專長代碼
  code   String  @id @db.VarChar(10)
  /// 名稱
  name   String  @db.VarChar(50)
  /// 英文名稱
  nameEn String  @db.VarChar(100)
  /// 是否通過
  apply  Boolean
}

/// 課程領域專長關聯
model CourseDomain {
  /// 課程識別碼
  CourseId   String @db.VarChar(9)
  /// 領域專長代碼
  DomainCode String @db.VarChar(10)

  @@unique([CourseId, DomainCode])
}

// ########################################
//  enum
// ########################################

enum CourseType {
  Normal
  Grouped
  General
  // TODO: `co_tp` 其實還有其他值，是否要列入?
}

enum CourseChanged {
  Normal
  New
  Updated
  Canceled
}

enum CourseCompulsory {
  Preassigned
  Compulsory
  Elective
}

enum IdentificationType {
  CourseId
  CourseName
}

enum StudentLimitType {
  /// 本系學士班
  DepatmentBachelor
  /// 本校學士班
  SchoolBachelor
  /// 本系學士班 含研究生
  DepatmentBachelorWithGraduateStudent
  /// 本校學士班 含研究生
  SchoolBachelorWithGraduateStudent
}

enum CourseLength {
  FullYear
  HalfYear
}
